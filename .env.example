# Platform Configuration
NGINX_PORT=9020

# Authentication (use bcrypt to hash passwords)
# Default: admin / MindAdmin123
# Generate hash: python3 -c "import bcrypt; print(bcrypt.hashpw(b'your_password', bcrypt.gensalt()).decode())"
AUTH_USERNAME=admin
AUTH_PASSWORD_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5CiIlW.JCNfIu

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=change-this-secret-key-in-production

# Session timeout in hours
SESSION_TIMEOUT=24

# HuggingFace token for model downloads (optional)
HF_TOKEN=

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Development/Production mode
ENVIRONMENT=production